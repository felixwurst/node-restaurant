            <div class="row">
                <form class="form-row" action="/admin/editmeal" method="POST" enctype="multipart/form-data">
                    <!-- burger-loop -->
                    <% for (let i = 0; i < meals.length; i++) { %>
                        <div class="col-xl-6 col-md-6 col-lg-6">
                            <div class="single_delicious d-flex align-items-center">
