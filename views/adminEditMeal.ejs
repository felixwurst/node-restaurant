                                        <label for="mealImgChange<%= i %>">Change image</label>
                                        <input type="file" class="form-control-file mealImg" id="mealImgChange<%= i %>" name="mealImg" accept="image/x-png,image/gif,image/jpeg">
                                    </div>
                                    <div class="form-group">
                                        <label for="mealTitleChange<%= i %>">Change title</label>
                                        <input type="text" class="form-control mealTitle" id="mealTitleChange<%= i %>" name="mealTitle" value="<%= meals[i].title %>">
                                    </div>
                                    <div class="form-group">
                                        <label for="mealDescriptionChange<%= i %>">Change description</label>
                                        <textarea class="form-control mealDescription" id="mealDescriptionChange<%= i %>" name="mealDescription" cols="30" rows="5"><%= meals[i].description %></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="mealPriceChange<%= i %>">Change price</label>
                                        <span><input type="number" class="form-control mealPrice" id="mealPriceChange<%= i %>" name="mealPrice" style="width: 100px;" value="<%= meals[i].price %>"></span>
                                    </div>
                                    <!-- <a href="#" class="btn btn-success editBtn" mealid="<%= i %>">save</a> -->
                                    <input type="submit" class="btn btn-success editBtn" name="editBtn" value="save<%= i %>" mealid="<%= i %>">
                                </div>
                            </div>
                        </div>
                    <% } %>
                </form>
